ANTHROPIC_API_KEY=sk-ant-...
WEBSOCKET_PORT=7847

# Optional: authenticate the Swift app â†” sidecar WebSocket connection.
# When set, the Swift app must send {"type":"hello","token":"..."} as its first message.
FLUX_BRIDGE_TOKEN=

# Sidecar WebSocket limits (bytes / chars). Useful to prevent huge payloads (e.g. base64 images).
FLUX_WS_MAX_PAYLOAD_BYTES=26214400
FLUX_MAX_IMAGES_PER_MESSAGE=4
FLUX_MAX_IMAGE_BASE64_CHARS=8388608

# Linear MCP (optional). If set, Flux sidecar will expose `linear__*` tools.
# You can use any of these env vars; MCP_LINEAR_TOKEN is preferred.
MCP_LINEAR_TOKEN=
